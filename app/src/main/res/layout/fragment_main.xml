<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView   android:layout_centerInParent="true" android:id="@+id/imgRoomba"
        android:layout_width="wrap_content" android:src="@drawable/roomba"
        android:layout_height="wrap_content"/>


    <TextView android:id="@+id/current_position"  android:layout_below="@id/imgRoomba" android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" android:textSize="16sp" android:text="@string/current_position" android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/roomba_position"  android:layout_below="@id/current_position" android:layout_centerHorizontal="true"
              android:layout_width="wrap_content" android:textSize="16sp" android:text="@string/current_position" android:layout_marginTop="20dp"
              android:layout_height="wrap_content"/>

</RelativeLayout>